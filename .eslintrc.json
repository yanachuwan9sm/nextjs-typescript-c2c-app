{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // `import React from 'react' の記述不要
    "import/order": [2, { "alphabetize": { "order": "asc" } }], // importの順番をアルファベット順に昇順でソート
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "lf",
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 80,
        "tabWidth": 2
      }
    ]
  }
}
